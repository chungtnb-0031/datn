<div class="site-blocks-cover overlay" style="background-image: url(<%= asset_url("hero_1.jpg")%>);" data-stellar-background-ratio="0.5">
  <div class="container pt-3">
    <div class="row align-items-center justify-content-center text-center">
      <div class="col-md-10">
        <div class="row justify-content-center mb-4">
          <div class="col-md-10 text-center">
            <h1><%= t ".find-nearby" %><span class="typed-words"></span></h1>
          </div>
        </div>
        <div class="form-search-wrap p-2" >
          <%= form_tag search_index_path, method: :get, class: "navbar-form navbar-left" do %>
            <div class="row align-items-center">
              <div class="col-lg-12 col-xl-6 no-sm-border border-right">
                <%= search_field_tag "search_place_name", params[:search_place_name], class: "form-control", placeholder: t("label.search_place_name"), data: { autocomplete_source: "#{@name}"} %>
              </div>
              
              <div class="col-lg-12 col-xl-4">
                <div class="select-wrap">
                  <span class="icon"><span class="icon-keyboard_arrow_down"></span></span>
                  <div>
                    <%= select_tag :type, options_for_select(@travel_place_types, params[:type]), class: "form-control"%>
                  </div>
                </div>
              </div>
              <div class="col-lg-12 col-xl-2 ml-auto text-right">
                <%= submit_tag t("button.search"), class: "btn text-white btn-primary form-control" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
